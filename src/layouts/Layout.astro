---
interface Props {
  title: string;
}

import { Image } from 'astro:assets';
import logo from '../assets/triangle-svgrepo-com.png';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- https://www.youtube.com/watch?v=HbBMp6yUXO0 -->
    <header class="primary-header flex">
      <div>
        <Image class="logo" src={logo} alt="logo image" width="40" />
      </div>
      <nav>
        <ul id="primary-navigation" class="primary-navigation flex">
          <li class="active">
            <a class="text-dark" href="index.html"> Home </a>
          </li>
          <li class="active">
            <a class="text-dark" href="index.html"> About </a>
          </li>
          <li class="active">
            <a class="text-dark" href="index.html"> Blog </a>
          </li>
          <li class="active">
            <a class="text-dark" href="index.html"> Contact </a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
  </body>
</html>

<style>
  .logo {
    margin: 2rem;
    cursor: pointer;
  }

  .primary-header {
    align-items: center;
    justify-content: space-between;
  }

  .primary-navigation a {
    letter-spacing: 0.2rem;
  }
</style>
